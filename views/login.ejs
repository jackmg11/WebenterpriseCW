<%- include("partials/header") -%>


<form id="loginF">
    <label for="Username">Username:</label><br>
    <input type="text" id="Username" name="Username"><br>
    <label for="Password">Password:</label><br>
    <input type="password" id="Password" name="Password">
    <button class="waves-effect waves-light btn" type="submit" id="loginBtn">Login</button>
  </form>
  <a href="/profiles/register">Register Here </a>


<script>
    $("#loginBtn").click(function(){
        username = $("#Username").val()
        password = $("#Password").val()
        $.post("", {"username": username, "password": password}, function(data, status, jqXHR){
            console.log(status)
            window.location.reload()
        })
    })

    window.addEventListener("load", function (){
        form = document.getElementById("loginF");
        form.addEventListener("submit", function (event){
            event.preventDefault();
        })
    })
</script>
